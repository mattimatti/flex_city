{% extends "layout.twig" %} {% block menu %} {% include "admin/menu-admin.twig" %} {% endblock %} {% block body %}


<div class="mt20">
<h3>{% if item %}Edit Hostess #{{ item.id }} {% else %} Create New Hostess {% endif %}</h3>
	{% include "admin/hostess_form.twig" %}
</div>
<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th>Surname</th>
				<th>Username</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in hostess %}
			<tr>
				<th scope="row">{{ item.id }}</th>
				<td>{{ item.name }}</td>
				<td>{{ item.surname }}</td>
				<td>{{ item.username }}</td>
				<td><a href="/admin/hostess/edit/id/{{ item.id }}">edit</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>

{% endblock %}
