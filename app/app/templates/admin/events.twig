<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Event Name</th>
				<th>Location</th>
				<th>Store</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in events %}
			<tr>
				<th scope="row">{{ item.id }}</th>
				<td>{{ item.label }}</td>
				<td>{{ item.location.label }}</td>
				<td>{{ item.store.label }}</td>
				<td><a target="_blank" href="{{ item.signupUrl() }}">signup</a></td>
				<td><a href="/admin/events?id={{ item.id }}">edit</a></td>
				<td><a href="/admin/events/delete?id={{ item.id }}">delete</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>

{% endblock %}
