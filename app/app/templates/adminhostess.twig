{% extends "layout.twig" %} {% block menu %} {% include "snippets/menu-admin.twig" %} {% endblock %} {% block body %}


<div class="mt20">
	<form role="form" autocomplete="off" method="post">
		<fieldset>
			<div class="form-group">
				<input class="form-control" autocomplete="off" placeholder="Username" name="username" type="text" autofocus="">
			</div>
			<div class="form-group">
				<input class="form-control" autocomplete="off" placeholder="Password" name="password" type="password" value="">
			</div>
			<button type="submit" class="btn btn-block btn-success">Insert</button>
		</fieldset>
	</form>
</div>
<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Username</th>
				<th>Email</th>
				<th>Password</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in hostess %}
			<tr>
				<th scope="row">{{ item.id }}</th>
				<td>{{ item.username }}</td>
				<td>{{ item.email }}</td>
				<td>{{ item.password }}</td>
				<td><a href="/admin/hostess/edit/id/{{ item.id }}">edit</a></td>
				<td><a href="/admin/hostess/delete/id/{{ item.id }}">delete</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>

{% endblock %}
