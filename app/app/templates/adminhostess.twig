{% extends "layout.twig" %} {% block menu %} {% include "snippets/menu-admin.twig" %} {% endblock %} {% block body %}


<div class="mt20">
<h3>{% if item %}Edit Event #{{ item.id }} {% else %} Create New Hostess {% endif %}</h3>
	{% include "admin/hostess_form.twig" %}
</div>
<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Username</th>
				<th>Email</th>
				<th>Password</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in hostess %}
			<tr>
				<th scope="row">{{ item.id }}</th>
				<td>{{ item.username }}</td>
				<td>{{ item.email }}</td>
				<td>{{ item.password }}</td>
				<td><a href="/admin/hostess/edit/id/{{ item.id }}">edit</a></td>
				<td><a href="/admin/hostess/delete/id/{{ item.id }}">delete</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>

{% endblock %}
