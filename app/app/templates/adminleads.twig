{% extends "layout.twig" %}
{% block menu %}
{% include "snippets/menu-admin.twig" %}
{% endblock %}
{% block body %}
<div class="mt20">
	<form role="form" action="/admin/leads" autocomplete="off" method="get">
	<div class="mt20">{% include "snippets/select.twig" with {name: 'event_id', items : events, label: 'Please Select An event Event', selectedvalue : event_id, autosubmit : true} %}</div>
	</form>
</div>


{% if event  %}

	<div class="btn-toolbar mt20">
		<div class="btn-group">
		  <a target="_blank" href="{{ event.url }}"  class="btn btn-default">Event Landing Page</a>
		  <a target="_blank" href="{{ event.signupUrl }}"  class="btn btn-default">Event Register Page</a>
		</div>
		<div class="btn-group pull-right">
		  <a target="_blank" href="/admin/exporter/leads" class="btn btn-info">Export list</a>
		</div>
	</div>
	

<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Name/Surname</th>
				<th>Email</th>
				<th>Age</th>
				<th>Location</th>
				<th>Store</th>
				<th>Hostess</th>
				<th>Date</th>
			</tr>
		</thead>
		<tbody>
			{% for item in leads %}
			<tr>
				<td scope="row">{{ item.id }}</td>
				<td scope="row">{{ item.name }} {{ item.surname }}</td>
				<td scope="row">{{ item.email }}</td>
				<td scope="row">{{ item.age() }}</td>
				<td scope="row">{{ item.event.location.label }}</td>
				<td scope="row">{{ item.event.store.label }}</td>
				<td scope="row">{{ item.hostess().label }}</td>
				<td scope="row">{{ item.date_create }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	
<style>
  ul {
    list-style: none;
  }
  li {
    display: inline-block;
  }
</style>
<ul>
  {% for number, position in pages %}
    {% if position == 'first' %}
      <li><a href="/admin/leads?event_id={{ event_id }}&page={{ number }}">&laquo;</a></li>
    {% elseif position == 'less' or position == 'more' %}
      <li>...</li>
    {% elseif position == 'previous' or position == 'next' %}
      <li><a href="/admin/leads?event_id={{ event_id }}&page={{ number }}">{{ number }}</a></li>
    {% elseif position == 'current' %}
      <li>{{ number }}</li>
    {% elseif position == 'last' %}
      <li><a href="/admin/leads?event_id={{ event_id }}&page={{ number }}">&raquo;</a></li>
    {% endif %}
  {% endfor %}
</ul>

</div>

{# {% else %}#}
{# No leads found for event {{ event.label }}#}
{# {% endif %}#}




{% endif %}

{% endblock %}