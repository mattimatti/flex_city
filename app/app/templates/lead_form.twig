
{# http://1000hz.github.io/bootstrap-validator/#validator-markup#}
<style>

.registerform .mt20{
	margin-top: 20px;
}
.registerform .mt40{
	margin-top: 40px;
}
.registerform .mt60{
	margin-top: 60px;
}
.registerform .mt120{
	margin-top: 120px;
}
</style>

<form id="register" method="post" class="registerform" data-toggle="validator">

	{% include "snippets/csfr.twig" %}
	
    {% block flashmessages %}
	{% include "snippets/flashmessages.twig" %}
	{% endblock %}

    {% if not event_id %}
    {% include "snippets/alert.twig" with {text : 'You must specify an event', class : 'danger'} %}
    {% endif %}

    {% if not redirect %}
    {% include "snippets/alert.twig" with {text : 'You must specify a redirect', class : 'danger'} %}
    {% endif %}

	<input type="hidden" name="event_id" value="{{ event_id }}">
	<input type="hidden" name="redirect" value="{{ redirect }}">

	<div class="row">
		<div class="col-md-6">{% include "snippets/field.twig" with {name: 'name', label: 'NAME'|trans, required : true, placeholder: 'NAME-placeholder'|trans, selectedvalue : item.name} %}</div>
		<div class="col-md-6">{% include "snippets/field.twig" with {name: 'surname', label: 'SURNAME'|trans, required : true, placeholder: 'SURNAME-placeholder'|trans, selectedvalue : item.surname} %}</div>
	</div>

	<div class="row">
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'city', label: 'CITY'|trans, required : true, placeholder: 'CITY-placeholder'|trans, selectedvalue : item.city} %}</div>
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'phone', label: 'PHONE'|trans, required : true, placeholder: 'PHONE-placeholder'|trans, selectedvalue : item.phone} %}</div>
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'email', label: 'EMAIL'|trans, type: 'email', required : true, placeholder: 'EMAIL-placeholder'|trans, selectedvalue : item.email} %}</div>
	</div>

	<div class="row">
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'day', label: 'DAY'|trans, required : true, selectedvalue : item.day, placeholder: '28', extra: 'pattern=^[0-9]{2}$'} %}</div>
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'month', label: 'MONTH'|trans, required : true, selectedvalue : item.month, placeholder: '01', extra: 'pattern=^[0-9]{2}$'} %}</div>
		<div class="col-md-4">{% include "snippets/field.twig" with {name: 'year', label: 'YEAR'|trans, required : true, selectedvalue : item.year, placeholder: '2000', extra: 'pattern=^[0-9]{4}$'} %}</div>
	</div>

	{% if event_id != 1 %}
	<div class="row">
		<div class="col-md-4">
		    <div class="form-group">
			    <label>{{ "PRODUCT"|trans }}</label>
				<select name="product" id="product" required class="form-control">
					<option>{{ "SELECT_PRODUCT"|trans }}</option>
					<option>TIDELANDS</option>
					<option>LAKEVILLE</option>
					<option>KILLINGTON - MAN</option>
					<option>KILLINGTON - WOMAN</option>
					<option>AMHERST</option>
					<option>KENNISTON</option>
				</select>
			</div>
		</div>
	</div>
	{% endif %}

	<div class="row mt20">
		<div class="col-md-6">
			<label>{{ "GENDER"|trans }}</label>
		</div>
		<div class="col-md-10">
			<div class="wrapper-radio">
			  {% include "snippets/radio.twig" with {name: 'gender', required : true, selectedvalue : item.gender, options : [{value : 'm',label : 'MALE'|trans},{value : 'f',label : 'FEMALE'|trans}] } %}
			</div>
		</div>
	</div>
	
	
	
	
	<div class="mt120"></div>

	
	
	<!-- privacy policy -->
	<div class="row mt120">
		<div class="col-sm-12 col-md-1">
		      {% include "snippets/checkbox.twig" with {name: 'pp', required : true, selectedvalue : item.pp, value : 'y' } %}
		</div>
		<div class="col-sm-12 col-md-11">
			{{ "privacy-label"|trans|raw }}
		</div>
	</div>


	<!-- marketing -->
	<div class="row mt20">
		<div class="col-sm-12 col-md-1">
{# 		      {% include "snippets/checkbox.twig" with {name: 'mkt', required : true, selectedvalue : item.mkt, value : 'y' } %}#}
		      {% include "snippets/checkbox.twig" with {name: 'mkt', selectedvalue : item.mkt, value : 'y' } %}
		</div>
		<div class="col-sm-12 col-md-11">
			{{ "marketing-label"|trans }}
		</div>
	</div>

	
	
	<!-- marketing-third -->
	<div class="row mt20">
		<div class="col-sm-12 col-md-1">
		      {% include "snippets/checkbox.twig" with {name: 'mkt3rd',  selectedvalue : item.mkt3rd, value : 'y' } %}
		</div>
		<div class="col-sm-12 col-md-11">
			{{ "marketing-third-label"|trans }}
		</div>
	</div>

{# 	<div class="mt20">#}
{# 		*Campo obbligatorio#}
{# 	</div>#}

	<div class="row mt20">
		<div class="col-md-12">
		<button id="submit" type="submit" class="btn btn-block btn-success">{{ "subscribe"|trans }}</button>
		</div>
	</div>


</form>


<!-- Terms and Conditions Modal -->
<div class="modal fade container" id="termsModal" tabindex="-1" role="dialog" >
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{ "terms-modal-title"|trans }}</h4>
      </div>
      <div class="modal-body">
        {% include "termsandconditions.twig" %}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ "close"|trans }}</button>
      </div>
    </div>
  </div>
</div>



