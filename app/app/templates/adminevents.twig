{% extends "layout.twig" %} {% block menu %} {% include "snippets/menu-admin.twig" %} {% endblock %} 


{% block body %}


<div class="mt20">

    <h3>{% if item %}Edit Event #{{ item.id }} {% else %} Create New Event {% endif %}</h3>

	{% include "admin/event_form.twig" %}

</div>
<div class="mt20">

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Label</th>
				<th>Location</th>
				<th>Store</th>
				<th></th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for item in events %}
			<tr>
				<th scope="row">{{ item.id }}</th>
				<td>{{ item.label }}</td>
				<td>{{ item.location.label }}</td>
				<td>{{ item.store.label }}</td>
				<td><a target="_blank" href="{{ item.url() }}">landing</a></td>
				<td><a target="_blank" href="{{ item.signupUrl() }}">signup</a></td>
				<td><a href="/admin/events?id={{ item.id }}">edit</a></td>
				<td><a href="/admin/events/delete?id={{ item.id }}">delete</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

</div>

{% endblock %}
